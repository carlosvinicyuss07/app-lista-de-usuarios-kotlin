<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.recyclerviewapp.ui.fragments.HomeFragment"
        android:label="Lista de Usuários"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"/>
        <action
            android:id="@+id/action_homeFragment_to_formUsuarioFragment"
            app:destination="@id/formUsuarioFragment"/>
    </fragment>

    <fragment
        android:id="@+id/formUsuarioFragment"
        android:name="com.example.recyclerviewapp.ui.fragments.FormUsuarioFragment"
        android:label="Formulário"
        tools:layout="@layout/fragment_form_usuario">
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.recyclerviewapp.ui.fragments.DetailsFragment"
        android:label="Detalhes"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="userId"
            app:argType="integer" />
    </fragment>

</navigation>